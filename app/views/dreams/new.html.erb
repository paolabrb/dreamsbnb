<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://getwallpapers.com/wallpaper/full/f/e/b/1156420-full-size-hd-gradient-wallpapers-2560x1440-free-download.jpg)">

<div class="container-form">
  <h1>Add a new dream</h1>
  <%= simple_form_for(@dream) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :vibe, collection: Dream::VIBES%>
  <%= f.input :duration, label:'Duration (min)', placeholder: 'forever' %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'ADD', class: 'create-button-form' %>
  <% end %>
</div>

