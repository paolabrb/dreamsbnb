<div class="container">
  <h1>Add a new dream</h1>
  <%= simple_form_for(@dream) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :vibe, collection: Dream::VIBES%>
  <%= f.input :duration, label:'Duration (min)', placeholder: 'forever' %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'create dream'%>
  <% end %>
</div>

