<div class="container">
  <div class="form-design">
    <%= simple_form_for [@dream, @booking] do |f| %>
      <h1>Change your booking for <strong><%= @dream.title %></strong> now!</h1>
      <%= f.input :date_booking, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "UPDATE BOOKING", class: 'create-button-form' %>
    <% end %>
  </div>
</div>
